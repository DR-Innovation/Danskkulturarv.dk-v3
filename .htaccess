# BEGIN Legacy rewrites
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /dka/
RewriteRule ^chaos_post/([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})/?$ /dka/index.php?guid=$1 [R=301,NC]
RewriteCond %{QUERY_STRING} ^s=([^&]*)$
RewriteRule .* /dka/find/%1/? [L,R=301]
RewriteRule ^collection/([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})/?$	http://social.danskkulturarv.dk/collection/$1 [L,R=301]
RewriteRule ^members.*$		/dka/relaunch/ [L,R=301]
RewriteRule ^inspiration/?$	/dka/relaunch/ [L,R=301]
RewriteRule ^english/?$		/dka/relaunch/ [L,R=301]
</IfModule>
# END Legacy rewrites

# Block access to "hidden" directories whose names begin with a period
<IfModule mod_rewrite.c>
   RewriteCond %{SCRIPT_FILENAME} -d
   RewriteCond %{SCRIPT_FILENAME} -f
   RewriteRule "(^|/)\." - [F]
</IfModule>

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /dka/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /dka/index.php [L]
</IfModule>

# END WordPress
